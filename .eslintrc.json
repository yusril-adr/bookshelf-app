{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jasmine": true
    },
    "extends": [
        "airbnb-base",
        "plugin:codeceptjs/recommended"
    ],
    "plugins": [
        "jasmine"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": "off",
        "import/no-extraneous-dependencies": "off",
        "no-underscore-dangle": "off",
        "no-await-in-loop": "off"
    }
}
